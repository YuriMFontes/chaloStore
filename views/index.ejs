        <!-- Modal de Login -->
        <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header border-0">
                        <h5 class="modal-title" id="loginModalLabel">Entrar</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3 position-relative">
                                <input type="email" class="form-control" id="email" placeholder="E-mail">
                            </div>
                            <div class="mb-3 position-relative">
                                <input type="password" class="form-control" id="password" placeholder="Senha">
                                <i class="fas fa-eye password-toggle" onclick="togglePassword('password', this)"></i>
                            </div>
                            <button type="submit" class="btn-modal">Entrar</button>
                        </form>
                        <p class="mt-3">Não tem uma conta? <a href="#" data-bs-toggle="modal"
                                data-bs-target="#registerModal" data-bs-dismiss="modal">Registrar</a></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal de Registro -->
        <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel"
